<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="359dp"
        android:layout_height="34dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:text="TP1 App"
        android:textColor="#070707"
        android:background="#0278ED"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="#FFFFFF"
        android:hint="Entrez votre nombre d'argent"
        android:inputType="numberDecimal"
        android:padding="18dp"
        android:textSize="25dp" />

    <RadioGroup
        android:id="@+id/monRadioGroup"
        android:layout_width="337dp"
        android:layout_height="301dp"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioDinarToEuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="149dp"
            android:text="Dinar ==> Euro"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioEuroToDinar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="41dp"
            android:layout_marginTop="45dp"
            android:text="Euro ==>Dinar"
            android:textSize="25dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="217dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="Le RÃ©sultat "
        android:textSize="25dp" />

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="54dp"
        android:text="CONVERT"
        android:textSize="25dp" />


</LinearLayout>